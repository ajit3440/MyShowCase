@using MyShowCase.Data.FaqSectionModels
@using MyShowCase.Data
    <!-- FaqSection -->
<section id="faq" class="faq section">

    <!-- Section Title -->
    <div class="container section-title">
        <h2>@Model.SectionTitle</h2>
        <p>@Model.SectionSubtitle</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row justify-content-center">

            <div class="col-lg-12" data-aos="fade-up" data-aos-delay="100">

                <div class="faq-container">
                    @foreach (var faq in Model.Faqs)
                    {
                        <div class="faq-item @(faq.IsActive ? "faq-active" : "")">
                            <h3>@faq.Question</h3>
                            <div class="faq-content">
                                <p>@faq.Answer</p>
                            </div>
                            <i class="faq-toggle bi bi-chevron-right"></i>
                        </div>
                    }
                </div>

            </div><!-- End Faq Column-->

        </div>

    </div>

</section><!-- /Faq Section -->
@code {
    private FaqSectionModel Model { get; set; }
    [Inject] private ContentStore Store { get; set; }
    [Parameter] public string? ContentId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Model = await Store.GetAsync<FaqSectionModel>("FaqSection", ContentId) ?? GetFaqSection();
    }

    private FaqSectionModel GetFaqSection()
    {
        return new FaqSectionModel
        {
            SectionTitle = "Frequently Asked Questions",
            SectionSubtitle = "Short answers to common questions about my work and process.",
            Faqs = new List<FaqItem>
            {
                new FaqItem
                {
                    Question = "What services do you offer?",
                    Answer = "I design and build websites and web apps, integrate AI features, and help teams improve performance, accessibility, and developer workflow.",
                    IsActive = true
                },
                new FaqItem
                {
                    Question = "What is your typical project timeline?",
                    Answer = "Most projects take 3–8 weeks depending on scope and complexity. I’ll propose a phased plan with clear milestones and deliverables."
                },
                new FaqItem
                {
                    Question = "Do you work with existing products?",
                    Answer = "Yes. I can audit, refactor, or extend existing codebases. I focus on incremental improvements that provide quick wins without disruption."
                },
                new FaqItem
                {
                    Question = "How do we communicate during the project?",
                    Answer = "I provide weekly updates and async status notes. We can use email, Slack, or your preferred tools for day‑to‑day coordination."
                },
                new FaqItem
                {
                    Question = "What are your rates?",
                    Answer = "I offer fixed‑scope packages and retainer options. After a brief call and requirements review, I’ll provide a transparent quote."
                },
                new FaqItem
                {
                    Question = "Can you help after launch?",
                    Answer = "Absolutely. I provide post‑launch support, monitoring, and optimization to ensure your product keeps improving."
                }
            }
        };
    }

    // Models
    
}
