@using MyShowCase.Data.ServicesSectionModels
 <!-- ServicesSection -->
<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title">
        <h2>@Model.SectionTitle</h2>
        <p>@Model.SectionSubtitle</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row g-4">
            @foreach (var item in Model.Services)
            {
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="@item.AOSDelay">
                    <div class="service-item">
                        <div class="icon">
                            <i class="@item.Icon"></i>
                        </div>
                        <h3>@item.Title</h3>
                        <p>@item.Description</p>
                        <div class="card-links">
                            <a href="@item.LinkUrl" class="link-item">
                                Learn More
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>

</section><!-- /Services Section -->
