                },
                new ServiceCard
                {
                    Icon = "bi bi-shield-check",
                    Title = "Secure Systems",
                    Description = "Security best practices baked in — authentication, authorization, and data protection by default.",
                    LinkText = "Learn More",
                    LinkUrl = "#",
                    AOSDelay = 200
                },
                new ServiceCard
                {
                    Icon = "bi bi-graph-up",
                    Title = "Growth Strategy",
                    Description = "Optimize performance, SEO, and UX to convert more users and retain customers.",
                    LinkText = "Learn More",
                    LinkUrl = "#",
                    AOSDelay = 300
                },
                new ServiceCard
                {
                    Icon = "bi bi-cpu",
                    Title = "AI Integration",
                    Description = "Integrate practical AI features that enhance workflows without adding complexity.",
                    LinkText = "Learn More",
                    LinkUrl = "#",
                    AOSDelay = 100
                },
                new ServiceCard
                {
