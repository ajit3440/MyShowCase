@using MyShowCase.Data
@using MyShowCase.Data.AboutSectionModels

<section id="about" class="about section">
    <div class="container section-title">
        <h2>@Model.SectionTitle</h2>
        <p>@Model.SectionSubtitle</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row align-items-center">

            <!-- Profile -->
            <div class="col-lg-5" data-aos="fade-right" data-aos-delay="200">
                <div class="profile-image-wrapper">
                    <div class="profile-image">
                        <img src="@Model.ProfileImageUrl" alt="Profile" class="img-fluid">
                    </div>
                    <div class="signature-section">
                        <img src="@Model.SignatureImageUrl" alt="Signature" class="signature">
                        <p class="quote">@Model.Quote</p>
                    </div>
                </div>
            </div>

            <!-- About Text -->
            <div class="col-lg-7" data-aos="fade-left" data-aos-delay="300">
                <div class="about-content">
                    <div class="intro">
                        <h2>@Model.IntroTitle</h2>
                        <p>@Model.IntroDescription</p>
                    </div>

                    <!-- Skills -->
                    <div class="skills-grid">
                        @foreach (var skill in Model.Skills)
                        {
                            <div class="skill-item" data-aos="zoom-in">
                                <div class="skill-icon"><i class="@skill.Icon"></i></div>
                                <h4>@skill.Title</h4>
                                <p>@skill.Description</p>
                            </div>
                        }
                    </div>

                    <!-- Timeline -->
                    <div class="journey-timeline" data-aos="fade-up">
                        @foreach (var item in Model.Timeline)
                        {
                            <div class="timeline-item">
                                <div class="year">@item.Year</div>
                                <div class="description">@item.Description</div>
                            </div>
                        }
                    </div>

                    <!-- CTA -->
                    <div class="cta-section" data-aos="fade-up">
                        <div class="fun-fact">
                            <span class="emoji">@Model.FunFactEmoji</span>
                            <span class="text">@Model.FunFactText</span>
                        </div>
                        <div class="action-buttons">
                            <a href="@Model.PrimaryButtonLink" class="btn btn-primary">@Model.PrimaryButtonText</a>
                            <a href="@Model.SecondaryButtonLink" class="btn btn-outline">@Model.SecondaryButtonText</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

