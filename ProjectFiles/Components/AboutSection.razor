@using MyShowCase.Data
@using MyShowCase.Data.AboutSectionModels

<section id="about" class="about section">
    <div class="container section-title">
        <h2>@Model.SectionTitle</h2>
        <p>@Model.SectionSubtitle</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row align-items-center">

            <!-- Profile -->
            <div class="col-lg-5" data-aos="fade-right" data-aos-delay="200">
                <div class="profile-image-wrapper">
                    <div class="profile-image">
                        <img src="@Model.ProfileImageUrl" alt="Profile" class="img-fluid">
                    </div>
                    <div class="signature-section">
                        <img src="@Model.SignatureImageUrl" alt="Signature" class="signature">
                        <p class="quote">@Model.Quote</p>
                    </div>
                </div>
            </div>

            <!-- About Text -->
            <div class="col-lg-7" data-aos="fade-left" data-aos-delay="300">
                <div class="about-content">
                    <div class="intro">
                        <h2>@Model.IntroTitle</h2>
                        <p>@Model.IntroDescription</p>
                    </div>

                    <!-- Skills -->
                    <div class="skills-grid">
                        @foreach (var skill in Model.Skills)
                        {
                            <div class="skill-item" data-aos="zoom-in">
                                <div class="skill-icon"><i class="@skill.Icon"></i></div>
                                <h4>@skill.Title</h4>
                                <p>@skill.Description</p>
                            </div>
                        }
                    </div>

                    <!-- Timeline -->
                    <div class="journey-timeline" data-aos="fade-up">
                        @foreach (var item in Model.Timeline)
                        {
                            <div class="timeline-item">
                                <div class="year">@item.Year</div>
                                <div class="description">@item.Description</div>
                            </div>
                        }
                    </div>

                    <!-- CTA -->
                    <div class="cta-section" data-aos="fade-up">
                        <div class="fun-fact">
                            <span class="emoji">@Model.FunFactEmoji</span>
                            <span class="text">@Model.FunFactText</span>
                        </div>
                        <div class="action-buttons">
                            <a href="@Model.PrimaryButtonLink" class="btn btn-primary">@Model.PrimaryButtonText</a>
                            <a href="@Model.SecondaryButtonLink" class="btn btn-outline">@Model.SecondaryButtonText</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private AboutSectionModel Model { get; set; }
    [Inject] private ContentStore Store { get; set; }
    [Parameter] public string? ContentId { get; set; }
    protected override async Task OnInitializedAsync()
    {
        Model = await Store.GetAsync<AboutSectionModel>("AboutSection", ContentId) ?? GetAboutSection();
    }
    private AboutSectionModel GetAboutSection()
    {
        return new AboutSectionModel
        {
            SectionTitle = "About",
            SectionSubtitle = "Learn more about my background, approach, and values.",
            ProfileImageUrl = "assets/img/profile/profile-square-1.webp",
            SignatureImageUrl = "assets/img/misc/signature-1.webp",
            Quote = "Building meaningful digital experiences through creative code.",
            IntroTitle = "Hi, I'm Brandon — a Creative Developer",
            IntroDescription = "I design and build modern, accessible web experiences with a focus on performance, clarity, and craft. I care deeply about product quality and love turning complex ideas into simple, delightful interfaces.",
            Skills = new List<AboutSkill>
            {
                new AboutSkill { Icon = "bi bi-palette", Title = "UI/UX Design", Description = "Thoughtful interfaces with usability and consistency in mind." },
                new AboutSkill { Icon = "bi bi-code-slash", Title = "Frontend Dev", Description = "Robust, maintainable code using modern web technologies." },
                new AboutSkill { Icon = "bi bi-camera", Title = "Photography", Description = "Visual storytelling to support brand and product narratives." }
            },
            Timeline = new List<JourneyTimeline>
            {
                new JourneyTimeline { Year = "2019", Description = "Graduated with B.A. in Digital Design from Creative University" },
                new JourneyTimeline { Year = "2020", Description = "Joined InnovateTech as Junior Frontend Developer" },
                new JourneyTimeline { Year = "2023", Description = "Launched freelance career specializing in creative web solutions" }
            },
            FunFactEmoji = "☕",
            FunFactText = "Coffee‑fueled developer based in Portland",
            PrimaryButtonText = "View My Work",
            PrimaryButtonLink = "#portfolio",
            SecondaryButtonText = "Download Resume",
            SecondaryButtonLink = "#"
        };
    }
}
